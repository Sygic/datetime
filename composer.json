{
    "name": "pauci/datetime",
    "description": "Enhanced DateTime, DateTimeImmutable and DateInterval objects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pavol Kirschbaum",
            "email": "pauci.sk@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "autoload": {
        "psr-4": {"Pauci\\DateTime\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Pauci\\DateTime\\Test\\": "tests/src/"}
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
